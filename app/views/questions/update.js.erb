var $form = $('#edit_question_<%= @question.id %>'),
    $alert = $form.find('.alert-danger');

$alert.remove();

<% if @question.errors.any? %>
    $form.prepend('<%= fix_remotipart { render 'shared/errors_messages', resource: @question } %>');
<% else %>
    $form.closest('.question').replaceWith('<%= fix_remotipart { render 'questions/question_view' } %>');
<% end %>