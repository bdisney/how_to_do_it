var $form = $('#new_answer'),
    $alert = $form.find('.alert-danger');
    $alert.remove();

<% if @answer.errors.any? %>
    $form.prepend('<%= fix_remotipart { render 'shared/errors_messages', resource: @answer } %>');
<% else %>
    $('.answers-list').append('<%= fix_remotipart { render @answer } %>');

    $form.find('input, textarea').val('');
    $form.find('.nested-fields').not(':last').remove();
<% end %>