$(document).off('ajax:success', '.answer-accept').on('ajax:success', '.answer-accept', function() {
    var $accepted_answer = $('.answer').has('.accepted-on'),
        $picked_answer = $(this).closest('.answer');

    $accepted_answer.find('.answer-accept').toggleClass('accepted-on accepted-off');
    $picked_answer.find('.answer-accepted').replaceWith('<%= render 'answers/accept', answer: @answer %>');
    $picked_answer.prependTo('.answers-list');
    });